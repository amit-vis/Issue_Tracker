<body>
  <div class="mb-5 p-5">
    <%for(let project of projects){%>
    <div class="card mb-2 w-50 m-auto" id="project-<%=project.id%>">
      <div class="card-header d-flex justify-content-between align-items-center">
        <strong>Name of the Project: </strong>
        <%=project.name%>
        <div>
        <a href="/project/delete/?id=<%=project.id%>" class="delete-link" data-project-id="<%=project.id%>">X</a>
      </div>
      </div>
      <div class="card-body d-flex justify-content-between align-items-center">
        <div>
          <p class="card-title"><strong>Description: </strong><%=project.description%></p>
          <p class="card-text"><strong>Author: </strong><%=project.author%></p>
        </div>
        <div>
          <a href="/project/<%=project._id%>" class="btn btn-primary">Open Project</a>
        </div>
      </div>
    </div>
    <%}%>
  </div>
  <script src="/js/delete_project.js"></script>
</body>
